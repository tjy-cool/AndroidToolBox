<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.activityActivity">

    <Button
        android:id="@+id/BtnNormalActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Normal Activity"/>

    <Button
        android:id="@+id/BtnDailogActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:text="Dailog Activity"/>

    <TextView
        android:id="@+id/view_actibity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LogViewBackground"/>
</LinearLayout>